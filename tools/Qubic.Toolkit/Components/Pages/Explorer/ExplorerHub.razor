@page "/explorer"
@inject QubicBackendService Backend

<h4><i class="bi bi-binoculars me-2"></i>Explorer</h4>
<p class="text-muted">Network data exploration, lookups, and monitoring.</p>

<div class="row g-3">
    <div class="col-md-6 col-lg-4">
        <a href="/wallet/balance" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-currency-exchange fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Balance Lookup</h5>
                        <p class="card-text text-muted small mb-0">Check QU balance and transaction count for any identity</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    @if (IsRpc)
    {
        <div class="col-md-6 col-lg-4">
            <a href="/wallet/assets" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-grid-3x3-gap fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Asset Portfolio</h5>
                            <p class="card-text text-muted small mb-0">View all assets held by an identity</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    <div class="col-md-6 col-lg-4">
        <a href="/tx/lookup" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-search fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Transaction Lookup</h5>
                        <p class="card-text text-muted small mb-0">Query transaction status by transaction ID</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    @if (IsRpc)
    {
        <div class="col-md-6 col-lg-4">
            <a href="/explorer/tick" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-graph-up fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Tick Data</h5>
                            <p class="card-text text-muted small mb-0">Current tick info and epoch details</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/explorer/computors" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-hdd-network fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Computor List</h5>
                            <p class="card-text text-muted small mb-0">View computor IPs and status</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/explorer/ipos" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-rocket fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Active IPOs</h5>
                            <p class="card-text text-muted small mb-0">View currently active Initial Public Offerings</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/explorer/checktx" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-check2-square fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Check Tx on Tick</h5>
                            <p class="card-text text-muted small mb-0">Verify if a transaction exists in a specific tick</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (IsDirectNetwork)
    {
        <div class="col-md-6 col-lg-4">
            <a href="/explorer/ipostatus" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-bar-chart-steps fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">IPO Status</h5>
                            <p class="card-text text-muted small mb-0">View 676 participant bids for a contract IPO</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (IsBob)
    {
        <div class="col-md-6 col-lg-4">
            <a href="/wallet/transfers" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-clock-history fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Transfer History</h5>
                            <p class="card-text text-muted small mb-0">Track incoming and outgoing transfers</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/explorer/logs" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-file-text fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Log Viewer</h5>
                            <p class="card-text text-muted small mb-0">Browse Bob backend logs</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

@code {
    private bool IsRpc => Backend.ActiveBackend == QueryBackend.Rpc;
    private bool IsBob => Backend.ActiveBackend == QueryBackend.Bob;
    private bool IsDirectNetwork => Backend.ActiveBackend == QueryBackend.DirectNetwork;
}
