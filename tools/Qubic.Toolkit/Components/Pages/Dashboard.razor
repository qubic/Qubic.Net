@page "/"
@inject ToolkitBackendService Backend

<h4>Dashboard</h4>
<p class="text-muted">Qubic network overview.</p>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Current Tick</div>
            <div class="card-body">
                @if (_tickInfo != null)
                {
                    <table class="table table-sm mb-0">
                        <tr><td class="text-muted">Tick</td><td class="mono"><strong>@_tickInfo.Tick</strong></td></tr>
                        <tr><td class="text-muted">Epoch</td><td>@_tickInfo.Epoch</td></tr>
                        <tr><td class="text-muted">Duration</td><td>@(_tickInfo.TickDuration)ms</td></tr>
                        <tr><td class="text-muted">Initial Tick</td><td class="mono">@_tickInfo.InitialTick</td></tr>
                    </table>
                }
                else if (_loading)
                {
                    <span class="text-muted">Loading...</span>
                }
                else if (_error != null)
                {
                    <span class="text-danger">@_error</span>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Bob Status</div>
            <div class="card-body">
                @if (_chainId != null)
                {
                    <table class="table table-sm mb-0">
                        <tr><td class="text-muted">Network</td><td>@_chainId.Network</td></tr>
                        <tr><td class="text-muted">Chain ID</td><td class="mono">@_chainId.ChainId</td></tr>
                        <tr><td class="text-muted">Version</td><td>@_clientVersion</td></tr>
                    </table>
                }
                else
                {
                    <span class="text-muted">Switch to Bob backend to see status.</span>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Connection</div>
            <div class="card-body">
                <button class="btn btn-sm btn-primary" @onclick="TestConnection" disabled="@_testing">
                    @(_testing ? "Testing..." : "Test Connection")
                </button>
                @if (_testResult != null)
                {
                    <span class="ms-2 badge @(_testSuccess ? "bg-success" : "bg-danger")">@_testResult</span>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-1">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">Quick Stats</div>
            <div class="card-body">
                <table class="table table-sm mb-0">
                    <tr>
                        <td class="text-muted">Contracts Discovered</td>
                        <td><strong>@_contractCount</strong></td>
                        <td class="text-muted">Total Functions</td>
                        <td><strong>@_functionCount</strong></td>
                        <td class="text-muted">Backend</td>
                        <td><strong>@Backend.ActiveBackend</strong></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="row g-3 mt-1">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                Backend Compatibility
                <span class="badge bg-secondary">Active: @Backend.ActiveBackend</span>
            </div>
            <div class="card-body p-0">
                <table class="table table-sm table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Feature</th>
                            <th class="text-center" style="width:70px">RPC</th>
                            <th class="text-center" style="width:70px">Bob</th>
                            <th class="text-center" style="width:70px">Direct</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table-secondary"><td colspan="4"><strong>Wallet</strong></td></tr>
                        @BackendRow("Balance Lookup", "/wallet/balance", true, true, true)
                        @BackendRow("Asset Portfolio", "/wallet/assets", true, false, false)
                        @BackendRow("Transfer History", "/wallet/transfers", false, true, false)
                        @BackendRow("Identity Generator", "/wallet/identity", true, true, true, "Offline")

                        <tr class="table-secondary"><td colspan="4"><strong>Transactions</strong></td></tr>
                        @BackendRow("Send QU", "/tx/send", true, true, true)
                        @BackendRow("Send to Many", "/tx/send-many", true, true, true)
                        @BackendRow("Offline Builder", "/tx/offline", true, true, true, "Offline")
                        @BackendRow("Transaction Lookup", "/tx/lookup", true, true, false, "RPC + Bob")
                        @BackendRow("Import & Broadcast", "/tx/import", true, false, false)
                        @BackendRow("Transaction History", "/tx/history", true, true, true, "Local")

                        <tr class="table-secondary"><td colspan="4"><strong>Smart Contracts</strong></td></tr>
                        @BackendRow("Contract Browser", "/contracts/browser", true, true, true)
                        @BackendRow("Qx Assets", "/tx/qx", true, true, true)
                        @BackendRow("QSwap", "/tx/qswap", true, true, true)
                        @BackendRow("QEarn Staking", "/tx/qearn", true, true, true)
                        @BackendRow("QBond", "/tx/qbond", true, true, true)
                        @BackendRow("Quottery", "/tx/quottery", true, true, true)
                        @BackendRow("QUtil", "/tx/qutil", true, true, true)
                        @BackendRow("QVault", "/tx/qvault", true, true, true)
                        @BackendRow("MSVault", "/tx/msvault", true, true, true)
                        @BackendRow("Nostromo", "/tx/nostromo", true, true, true)
                        @BackendRow("IPO Bid", "/tx/ipobid", true, true, true)
                        @BackendRow("Burn QU", "/tx/burn", true, true, true)

                        <tr class="table-secondary"><td colspan="4"><strong>Explorer</strong></td></tr>
                        @BackendRow("Tick Data", "/explorer/tick", true, false, false)
                        @BackendRow("Computor List", "/explorer/computors", true, false, false)
                        @BackendRow("Active IPOs", "/explorer/ipos", true, false, false)
                        @BackendRow("Check Tx in Tick", "/explorer/checktx", true, false, false)
                        @BackendRow("IPO Status", "/explorer/ipostatus", false, false, true)
                        @BackendRow("Log Viewer", "/explorer/logs", false, true, false)

                        <tr class="table-secondary"><td colspan="4"><strong>Tools</strong></td></tr>
                        @BackendRow("Sign / Verify Message", "/tools/sign-verify", true, true, true, "Offline")
                        @BackendRow("Crypto Toolkit", "/tools/crypto", true, true, true, "Offline")
                        @BackendRow("Oracle Machine", "/tools/oracle", true, false, true, "Lookup: Direct only")
                        @BackendRow("Bob Playground", "/tools/bob-playground", false, true, false)

                        <tr class="table-secondary"><td colspan="4"><strong>Node Operations</strong></td></tr>
                        @BackendRow("Node Peers", "/node/peers", false, false, true)
                        @BackendRow("Node Management", "/node/management", false, false, true)
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private static RenderFragment BackendRow(string name, string href, bool rpc, bool bob, bool direct, string? note = null) => __builder =>
    {
        <tr>
            <td>
                <a href="@href">@name</a>
                @if (note != null)
                {
                    <span class="text-muted small ms-1">(@note)</span>
                }
            </td>
            <td class="text-center">@(rpc ? "\u2714" : "\u2014")</td>
            <td class="text-center">@(bob ? "\u2714" : "\u2014")</td>
            <td class="text-center">@(direct ? "\u2714" : "\u2014")</td>
        </tr>
    };

    private Qubic.Core.Entities.CurrentTickInfo? _tickInfo;
    private Qubic.Bob.Models.ChainIdResponse? _chainId;
    private string? _clientVersion;
    private bool _loading;
    private string? _error;
    private bool _testing;
    private bool _testSuccess;
    private string? _testResult;
    private int _contractCount;
    private int _functionCount;

    [Inject] ContractDiscovery Discovery { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        _contractCount = Discovery.Contracts.Count;
        _functionCount = Discovery.Contracts.Sum(c => c.Functions.Count);
        await LoadDashboard();
    }

    private async Task LoadDashboard()
    {
        _loading = true;
        _error = null;
        try
        {
            _tickInfo = await Backend.GetTickInfoAsync();
            try
            {
                _chainId = await Backend.GetChainIdAsync();
                _clientVersion = await Backend.GetClientVersionAsync();
            }
            catch { /* Bob-only, ignore if not available */ }
        }
        catch (Exception ex)
        {
            _error = ex.Message.Length > 100 ? ex.Message[..100] + "..." : ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task TestConnection()
    {
        _testing = true;
        _testResult = null;
        try
        {
            await Backend.QuerySmartContractAsync(4, 1, []);
            _testSuccess = true;
            _testResult = "Connected";
        }
        catch (Exception ex)
        {
            _testSuccess = false;
            _testResult = ex.Message.Length > 60 ? ex.Message[..60] + "..." : ex.Message;
        }
        finally
        {
            _testing = false;
        }
    }
}
