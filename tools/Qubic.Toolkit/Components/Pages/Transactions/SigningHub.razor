@page "/signing"
@inject QubicBackendService Backend

<h4><i class="bi bi-pencil-square me-2"></i>Send & Sign</h4>
<p class="text-muted">Create, sign, and manage transactions.</p>

<div class="row g-3">
    @if (CanBroadcast)
    {
        <div class="col-md-6 col-lg-4">
            <a href="/tx/send" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-send fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Send QU</h5>
                            <p class="card-text text-muted small mb-0">Transfer QU to another identity</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/tx/send-many" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-send-plus fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Send to Many</h5>
                            <p class="card-text text-muted small mb-0">Batch transfer QU to multiple recipients</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/tx/burn" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-fire fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Burn Qubic</h5>
                            <p class="card-text text-muted small mb-0">Permanently burn QU tokens</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/tx/ipobid" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-cash-stack fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">IPO Bid</h5>
                            <p class="card-text text-muted small mb-0">Place a bid in a contract's Initial Public Offering</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="/tx/custom" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-code-square fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Custom Transaction</h5>
                            <p class="card-text text-muted small mb-0">Build custom transaction with raw payload</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    <div class="col-md-6 col-lg-4">
        <a href="/tx/offline" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-file-earmark-lock fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Offline Builder</h5>
                        <p class="card-text text-muted small mb-0">Build and sign transactions offline</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-6 col-lg-4">
        <a href="/tools/sign-verify" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-shield-check fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Sign / Verify Message</h5>
                        <p class="card-text text-muted small mb-0">Sign messages or verify signatures</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-6 col-lg-4">
        <a href="/tx/history" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-list-ul fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Transaction History</h5>
                        <p class="card-text text-muted small mb-0">View locally tracked transaction status</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

@code {
    private bool CanBroadcast => Backend.ActiveBackend is QueryBackend.Rpc or QueryBackend.DirectNetwork;
}
