@page "/tools"
@inject QubicBackendService Backend

<h4><i class="bi bi-tools me-2"></i>Tools</h4>
<p class="text-muted">Utility and development tools.</p>

<div class="row g-3">
    <div class="col-md-6 col-lg-4">
        <a href="/wallet/identity" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-person-badge fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Identity Generator</h5>
                        <p class="card-text text-muted small mb-0">Generate vanity addresses and view identity details</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    @if (CanBroadcast)
    {
        <div class="col-md-6 col-lg-4">
            <a href="/tx/import" class="text-decoration-none">
                <div class="card h-100 hub-card">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-broadcast fs-2 text-primary"></i>
                        <div>
                            <h5 class="card-title mb-1">Broadcast Transaction</h5>
                            <p class="card-text text-muted small mb-0">Import a signed transaction and broadcast to the network</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    <div class="col-md-6 col-lg-4">
        <a href="/tools/crypto" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-key fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Crypto Toolkit</h5>
                        <p class="card-text text-muted small mb-0">Hash, derive keys, and crypto utilities</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-6 col-lg-4">
        <a href="/tools/oracle" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-cloud-arrow-down fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Oracle Machine</h5>
                        <p class="card-text text-muted small mb-0">Query decentralized oracles for price data and browse results</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-6 col-lg-4">
        <a href="/tools/bob-playground" class="text-decoration-none">
            <div class="card h-100 hub-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-terminal fs-2 text-primary"></i>
                    <div>
                        <h5 class="card-title mb-1">Bob RPC Playground</h5>
                        <p class="card-text text-muted small mb-0">Test Bob RPC endpoints interactively</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

@code {
    private bool CanBroadcast => Backend.ActiveBackend is QueryBackend.Rpc or QueryBackend.DirectNetwork;
}
